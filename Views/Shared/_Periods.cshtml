@model IEnumerable<Everlast.ViewModels.PeriodViewModel>

<div class="outer-table">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Injector
                </th>
                <th>
                    Date
                </th>
                <th>
                    Shift Start
                </th>
                <th>
                    Shift End
                </th>
                <th>
                    Options
                </th>
            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5">There are no results.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.FullName
                    </td>
                    <td>
                        @item.StartDate.ToShortDateString()
                    </td>
                    <td>
                        @item.StartDate.ToShortTimeString()
                    </td>
                    <td>
                        @item.StopDate.ToShortTimeString()
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Read", new { periodGuid = item.PeriodGuid, accountGuid = item.AccountGuid }, new { @class = "btn btn-sm btn-outline-dark" })
                        @Html.ActionLink("Delete", "Delete", new { periodGuid = item.PeriodGuid, accountGuid = item.AccountGuid }, new { @class = "btn btn-sm btn-outline-dark" })
                    </td>
                </tr>
            }
        }


    </table>
</div>