@model IEnumerable<Everlast.ViewModels.TreatmentViewModel>

@{
    ViewBag.Title = "Treatments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Treatments</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-sm btn-outline-dark" })
    @Html.ActionLink("Dashboard", "Home", "Account", null, new { @class = "btn btn-sm btn-outline-dark" })
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Service
            </th>
            <th>
                Treatment Name
            </th>
            <th>
                Treatment Description
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TreatmentName)
            </td>
            <td>
                <span class="v-truncate">
                    @Html.DisplayFor(modelItem => item.TreatmentDescription)
                </span>
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { treatmentGuid = item.TreatmentGuid }, new { @class = "btn btn-sm btn-outline-dark" })
                @Html.ActionLink("Details", "Read", new { treatmentGuid = item.TreatmentGuid }, new { @class = "btn btn-sm btn-outline-dark" })
                @Html.ActionLink("Delete", "Delete", new { treatmentGuid = item.TreatmentGuid }, new { @class = "btn btn-sm btn-outline-dark" })
            </td>
        </tr>
    }

</table>
