@model IEnumerable<Everlast.ViewModels.AppointmentViewModel>

@{
    ViewBag.Title = "Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Appointments</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-sm btn-outline-dark" })
    @Html.ActionLink("Dashboard", "Home", "Account", null, new { @class = "btn btn-sm btn-outline-dark" })
</p>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Injector
            </th>
            <th>
                Client
            </th>
            <th>
                Service
            </th>
            <th>
                Price
            </th>
            <th>
                Date
            </th>
            <th>
                Start
            </th>
            <th>
                End
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.InjectorName
            </td>
            <td>
                @item.ClientName
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.AppointmentStart.ToShortDateString()
            </td>
            <td>
                @item.AppointmentStart.ToShortTimeString()
            </td>
            <td>
                @item.AppointmentEnd.ToShortTimeString()
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { appointmentGuid = item.AppointmentGuid }, new { @class = "btn btn-sm btn-outline-dark" })
                @Html.ActionLink("Details", "Read", new { appointmentGuid = item.AppointmentGuid }, new { @class = "btn btn-sm btn-outline-dark" })
                @Html.ActionLink("Delete", "Delete", new { appointmentGuid = item.AppointmentGuid }, new { @class = "btn btn-sm btn-outline-dark" })
            </td>
        </tr>
    }

</table>
