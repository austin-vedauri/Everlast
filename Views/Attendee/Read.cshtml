@model Everlast.Models.Attendee

@{
    ViewBag.Title = "Read";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="jumbotron">
    <div class="row">
        <div class="col-lg-12">

        </div>
        <div class="col-lg-12">
            <div>
                <h4>All Done!</h4>
                <p>
                    Congratulations, @Model.FirstName, your reserved for @Model.Event.Title!
                </p>
                <hr />
                <p>My Information:</p>
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.LastName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LastName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Phone)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Phone)
                    </dd>

                </dl>

                <hr />
                <p>Event Information</p>

                <dl class="dl-horizontal">

                    <dt>
                        Event
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Event.Title) <br />
                        @Html.DisplayFor(model => model.Event.Description)
                    </dd>

                    <dt>
                        Event Time
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Event.PartyStart) to @Html.DisplayFor(model => model.Event.PartyEnd)
                    </dd>

                    <dt>
                        Address
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Event.Address)<br />
                        @Html.DisplayFor(model => model.Event.City), @Html.DisplayFor(model => model.Event.State)
                        @Html.DisplayFor(model => model.Event.State)
                    </dd>

                </dl>
            </div>
        </div>
    </div>
</div>