@model IEnumerable<Everlast.Models.Party>

@{
    ViewBag.Title = "Parties";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Parties</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-sm btn-outline-dark" })
    @Html.ActionLink("Dashboard", "Home", "Account", null, new { @class = "btn btn-sm btn-outline-dark" })
</p>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartyStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartyEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                Options
            </th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartyStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartyEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Update", new { partyGuid = item.PartyGuid }, new { @class = "btn btn-sm btn-outline-dark" })
                    @Html.ActionLink("Details", "Read", new { partyGuid = item.PartyGuid }, new { @class = "btn btn-sm btn-outline-dark" })
                    @Html.ActionLink("Delete", "Delete", new { partyGuid = item.PartyGuid }, new { @class = "btn btn-sm btn-outline-dark" })
                </td>
            </tr>
        }

</table>
