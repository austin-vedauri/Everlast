@model Everlast.Models.Member

<div class="v-section">
    <div class="row v-cover-section-content">
        <div class="col-lg-12 text-center">
            <h1 class="display-1">
                Login
            </h1>
            <h2 class="v-header">
                Members can login here.
            </h2>
            <blockquote class="blockquote">
                <p class="mb-0">
                    Please enter your username and password to login.
                </p>
            </blockquote>
        </div>
    </div>
</div>

<div class="v-section">
    <div class="row v-cover-section-content">
        <div class="col-lg-12">

            @using (Html.BeginForm("Login", "Portal", FormMethod.Post, new { @class = "v-center" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, "Username", null)
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, "Password", null)
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-outline-dark btn-block">Login</button>
                </div>
            }
        </div>
    </div>
</div>