@model Everlast.Models.Account

<div class="modal fade" id="modalDeleteAccount" tabindex="-1" role="dialog"aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-header">
                    Please Confirm
                </h5>
                <button type="button" class="close" data-dismiss="modalDeleteAccount">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="lead">
                    Are you sure you want to delete this account? 
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" data-dismiss="modalDeleteAccount">Cancel</button>
                <button id="btnDeleteAccount" type="button" class="btn btn-outline-dark">Confirm</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#btnDeleteAccount").click(() => onClickDeleteAccount());

    function onClickDeleteAccount() {
        DeleteAccount();
    }

    function DeleteAccount() {
        Everlast.Request.DeleteData('@Url.Action("DeleteAccount", "Account")', "@Model.AccountGuid");
        $("#modalDeleteAccount").hide();
    }
</script>